<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    cardview:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".6"
        android:layout_margin="6dp">
            <TextView
                android:id="@+id/room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:textStyle="bold"
                android:textColor= "@android:color/black"
                android:textAllCaps="false"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/room_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingLeft="4dp"
                android:src="@drawable/ic_location_city_blue_240dp" />


                <TextView
                    android:id="@+id/room_inclusive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="einschliesslich Steuern und Gebühren"
                    android:gravity="right"
                    android:drawableLeft="@drawable/ic_apply"
                    android:drawableTint="@android:color/holo_green_dark"
                    android:paddingLeft="2dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:layout_weight=".4"
            android:paddingLeft="0dp"
            android:layout_margin="4dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:id="@+id/roomtype_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/roomtype_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:src="@drawable/ic_account_box_36dp"/>
                <ImageView
                    android:id="@+id/roomtype_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:src="@drawable/ic_account_box_36dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:clipToPadding="false"
                android:textStyle="bold"
                android:textColor= "@android:color/black"
                android:textSize="20sp"
                android:text="52 FR/Nacht"
                />

            <TextView
                android:id="@+id/regular_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bookbtn_focused_color"
                android:text="Regulär: 208Fr"
                android:paddingRight="4dp"
                android:textSize="16sp"
                />

               <Button
                   android:id="@+id/choose_btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/button_choose_room"
                   android:background="@color/bookbtn_focused_color"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="2dp"
                   android:layout_marginRight="2dp"
                   android:layout_marginLeft="2dp"
                   android:textSize="11sp"
                   android:textStyle="bold"
                   android:layout_gravity="center_horizontal"
                   android:textColor="@android:color/white"
                    />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
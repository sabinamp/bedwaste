<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    cardview:cardCornerRadius="1dp"
    android:minWidth="300dp"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".5"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/wel_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/wel_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimaryDark"
                android:cropToPadding="true"
                android:paddingLeft="0dp"
                android:src="@drawable/ic_location_city_blue_240dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/hotel_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor= "@android:color/darker_gray"
                    android:textAllCaps="true"
                    android:text="9/10"
                    />
                <TextView
                    android:id="@+id/wel_min_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_directions_walk_red_24dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="2dp"
                    android:text="10min"
                    android:textAlignment="center"
                    android:textColor="@color/min_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".5"
            android:paddingLeft="1dp"
            android:layout_margin="2dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:id="@+id/hotel_stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="4dp">

                <TextView
                    android:id="@+id/wel_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    tools:text="*"
                    android:textSize="22sp"
                    android:gravity="right"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/wel_hotel_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingLeft="4dp"
                android:paddingBottom="2dp"
                android:text="44 FR/Nacht"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wel_hotel_address_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="Bahnhofstrasse 10"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/wel_otel_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="city"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="15sp" />


            <Button
                android:id="@+id/wel_booking_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:background="@color/bookbtn_color"
                android:text="Buchen"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>




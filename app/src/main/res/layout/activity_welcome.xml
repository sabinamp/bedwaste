<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/custom_rectangle"
        android:elevation="1dp">

        <EditText
            android:id="@+id/input_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_toStartOf="@+id/search"
            android:background="@android:color/transparent"
            android:layout_weight="1.01"
            android:ems="10"
            android:hint="Your preferred location"
            android:inputType="text"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"/>

        <ImageButton
            android:id="@+id/search"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_alignBottom="@id/search_bar"
            android:layout_alignParentEnd="true"
            android:elevation="1dp"
            android:src="@drawable/ic_search_36dp" />
        <ImageButton
            android:id="@+id/filters_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_alignRight="@id/search_bar"
            android:layout_alignParentEnd="true"
            android:elevation="2dp"
            android:src="@drawable/ic_filters_default"
            />
    </LinearLayout>


    <fragment
        android:id="@+id/current_location"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="0dp" />


        <LinearLayout
            android:id="@+id/layoutFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/gradient_background"
            android:elevation="3dp"
            android:orientation="vertical">



        <!-- Filtersection -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:text="Preis"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textPriceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text="@string/priceValue"
                    android:textColor="@android:color/white" />


            </RelativeLayout>

            <SeekBar
                android:id="@+id/seekBarPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:text="Entfernungslimit"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textValueDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/distanceValue"
                    android:textColor="@android:color/white" />

            </RelativeLayout>


            <SeekBar
                android:id="@+id/seekBarDistance"
                android:layout_width="438dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/linear_rooms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textRooms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1.2"
                    android:text="Anzahl Zimmer"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/lessRooms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_chevron_down" />

                <TextView
                    android:id="@+id/textRoomsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@color/colorAccent"
                    android:inputType="numberDecimal"
                    android:text="@string/roomsValue"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/moreRooms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_chevron_up" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_people"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textPeople"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1.2"
                    android:text="Anzahl Personen"
                    android:textColor="@android:color/white" />


                <ImageView
                    android:id="@+id/lessPeople"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_chevron_down" />

                <TextView
                    android:id="@+id/textPeopleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.1"
                    android:background="@color/colorAccent"
                    android:inputType="numberDecimal"
                    android:text="@string/peopleValue"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/morepeople"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_chevron_up" />

            </LinearLayout>

            <!--<LinearLayout
                android:id="@+id/linear_nights"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

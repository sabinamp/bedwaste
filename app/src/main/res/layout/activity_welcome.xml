            </LinearLayout>-->

            <ImageView
                android:id="@+id/btnExpandFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                app:srcCompat="@drawable/ic_sharp_expand" />


            <LinearLayout
                android:id="@+id/expandedFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layoutRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"

                        android:text="Bewertung"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/textValueRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/ratingValue"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

                <SeekBar
                    android:id="@+id/seekBarRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxBreakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:layoutDirection="rtl"
                        android:text="Frühstück"
                        android:textAlignment="textStart"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/checkBoxWlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:layoutDirection="rtl"
                        android:text="WLAN"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageView
                android:id="@+id/lessfilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                app:srcCompat="@drawable/ic_sharp_expand_less" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imageDecline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="5px"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="5px"
                    android:layout_weight="0.5"
                    android:background="@color/colorAccent"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_decline" />

                <ImageButton
                    android:id="@+id/imageApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="5px"
                    android:layout_marginRight="5px"
                    android:layout_marginBottom="5px"
                    android:layout_weight="0.5"
                    android:background="@color/colorAccent"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_apply" />
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary">
            <include layout="@layout/bottom_navigation_view" />

        </RelativeLayout>

    <!-- Countdown -->

    <TableLayout
        android:id="@+id/countdownBox"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/current_location"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0"
        android:background="#8ad5f8"
        android:gravity="center">

        <TextView
            android:id="@+id/countdownTextNoch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Noch" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/countdownTextHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" HH "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/countdownTextHoursGap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/countdownTextMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" MM "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/countdownTextMinutesGap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/countdownTextSeconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" SS "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </TableRow>

        <TextView
            android:id="@+id/countdownTextRabatt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="bis zu 50% Rabatt" />


    </TableLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButtonLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="338dp"
            android:layout_marginTop="599dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="76dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/white"
            app:srcCompat="@android:drawable/ic_menu_mylocation"
            />
    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/animation_maps" />



    </android.support.constraint.ConstraintLayout>
    <!-- END COUNTDOWN -->

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingFirstStepActivity"
    android:background="@android:color/white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_booking_first_step"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_height="50dp"
        app:subtitleTextAppearance="@style/ToolbarSubtitleAppearance"
        android:background="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"   >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectedRoom"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/type_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:paddingTop="0dp"
                android:layout_gravity="right">
            <ImageView
                android:id="@+id/maxocc_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:paddingLeft="4dp"
                android:src="@drawable/ic_account_box_black_24dp" />
            <ImageView
                android:id="@+id/maxocc_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:paddingLeft="2dp"
                android:src="@drawable/ic_account_box_black_24dp"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:textColor="@color/dark_gray"
            android:textSize="18sp">
            <!--<TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:labelFor="@id/input_name"
                android:text="@string/name_label" />-->
            <requestFocus></requestFocus>


            <EditText
                android:id="@+id/input_name"
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:paddingStart="50dp"
                android:paddingEnd="5dp"
                android:textColorHighlight="@color/colorAccent"
                android:maxLines="1"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line2"
            android:layout_below="@+id/line1"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:textColor="@color/dark_gray"
            android:textSize="18sp">
        <!--    <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:labelFor="@id/input_name"
                android:text="@string/firstname_label" />-->

            <requestFocus></requestFocus>
            <EditText
                android:id="@+id/input_firstname"
                android:hint="Vorname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingStart="50dp"
                android:paddingEnd="5dp"
                android:textColorHighlight="@color/colorAccent"
                />
        </android.support.design.widget.TextInputLayout>

         <android.support.design.widget.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="4dp"
             android:textColor="@color/dark_gray"
             android:id="@+id/line3"
            android:layout_below="@+id/line2"
             android:textSize="18sp">
            <!-- <TextView
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 android:labelFor="@id/input_street"
                 android:text="@string/street_label" />-->
             <requestFocus></requestFocus>
            <EditText
                android:id="@+id/input_street"
                android:hint="Strasse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:inputType="textNoSuggestions"
                android:paddingStart="50dp"
                android:paddingEnd="5dp"
                android:textColorHighlight="@color/colorAccent"
                />
         </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:textColor="@color/dark_gray"
            android:id="@+id/line4"
            android:layout_below="@+id/line3"
            android:textSize="18sp">

            <requestFocus></requestFocus>
            <EditText
                android:id="@+id/input_zipcode"
                android:hint="PLZ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:inputType="textPostalAddress"
                android:paddingStart="50dp"
                android:paddingEnd="5dp"
                android:textColorHighlight="@color/colorAccent"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:textColor="@color/dark_gray"
            android:id="@+id/line5"
            android:layout_below="@+id/line4"
            android:textSize="18sp">

            <requestFocus></requestFocus>
            <EditText
                android:id="@+id/input_ort"
                android:hint="Ort"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:inputType="textNoSuggestions"
                android:paddingStart="50dp"
                android:paddingEnd="5dp"
                android:textColorHighlight="@color/colorAccent"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:textColor="@color/dark_gray"
            android:id="@+id/line6"
            android:layout_below="@+id/line5"
            android:textSize="18sp">

            <requestFocus></requestFocus>
            <EditText
                android:id="@+id/input_land"
                android:hint="Land"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:inputType="textNoSuggestions"
                android:paddingStart="50dp"
                android:paddingEnd="5dp"
                android:textColorHighlight="@color/colorAccent"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:textColor="@color/dark_gray"
            android:id="@+id/line7"
            android:layout_below="@+id/line6"
            android:textSize="18sp">

            <requestFocus></requestFocus>
            <EditText
                android:id="@+id/input_tel"
                android:hint="Telefon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:inputType="textNoSuggestions"
                android:paddingStart="50dp"
                android:paddingEnd="5dp"
                android:textColorHighlight="@color/colorAccent"
                />
        </android.support.design.widget.TextInputLayout>
        <CheckBox android:id="@+id/checkbox_meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mit_angaben"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/colorPrimary"/>
        <Button
            android:id="@+id/weiter"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@color/bookbtn_color"
            android:text="Weiter zur Zahlung"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="#375DB5"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
</RelativeLayout>

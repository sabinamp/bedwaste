<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelInfoActivity">


    <LinearLayout
        android:id="@+id/layout_general_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ph_hotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="HotelName"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/ph_starRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="**"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:textColor="@color/dark_gray"
            android:textSize="19sp" />


        <ImageView
            android:id="@+id/ph_hotelGeneralImage"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_weight="1"
            android:minHeight="100dp"
            android:visibility="visible"
            app:srcCompat="@android:color/black" />

        <LinearLayout
            android:id="@+id/layout_minutesBookingCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ph_amountMinutes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_directions_walk_red_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="3 Minuten"
                android:textColor="@color/min_color"
                android:textSize="15sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/bookbtn_color"
                android:text="Buchen"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ph_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X"
                android:textAlignment="center"
                android:textSize="32dp" />

            <LinearLayout
                android:id="@+id/layout_pricePerNight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_francs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="CHF" />

                <TextView
                    android:id="@+id/text_perNight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="/Nacht" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tint="@color/dark_gray"
            android:minHeight="1dp"
            app:srcCompat="@android:color/darker_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottomHalfBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_general_info"

        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollview_bottomOverview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_bottomHalfContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout_textAddressPhoneNr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/text_Address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Addresse"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_StreetPhoneNr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tel"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_text_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/ph_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Strasse xy"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/ph_phoneNr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="056 282 00 00"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_town"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/ph_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dortmund"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text_empty_placeholder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_imageGallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="18dp">

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp">

                        <LinearLayout
                            android:id="@+id/image_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"></LinearLayout>

                    </HorizontalScrollView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_additionalFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/checkBox_Breakfast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="Frühstück"
                        android:textAlignment="center" />

                    <CheckBox
                        android:id="@+id/checkBox_Wlan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:clickable="false"
                        android:text="WLAN"
                        android:textAlignment="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="55dp"
                    android:text="TextView" />


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">
        <include layout="@layout/bottom_navigation_view" />

    </RelativeLayout>

</RelativeLayout>